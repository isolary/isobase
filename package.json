{
  "name": "isobase",
  "version": "1.0.0",
  "description": "Themeable design system starter.",
  "scripts": {
    "html-sketchapp-install": "html-sketchapp install",
    "build": "node-sass assets/css/style.scss -o build/css/ && npm run prefix",
    "clean": "del-cli build/",
    "prefix": "postcss build/css/style.css -d dist/css/ --use autoprefixer && npm run clean",
    "watch": "nodemon -e scss --exec 'npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "git@git.isolary.com:design/isobase.git"
  },
  "author": "Isolary",
  "license": "ISC",
  "devDependencies": {},
  "dependencies": {
    "@brainly/html-sketchapp": "^4.2.0",
    "autoprefixer": "^7.2.3",
    "del-cli": "^1.1.0",
    "html-sketchapp-cli": "^0.6.2",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "postcss-cli": "^6.1.2"
  }
}
