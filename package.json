{
  "name": "isobase",
  "version": "1.0.0",
  "description": "Themeable design system starter.",
  "scripts": {
    "html-sketchapp-install": "html-sketchapp install",
    "build": "node-sass src/base.scss -o build/css/ && npm run prefix",
    "clean": "del-cli build/",
    "prefix": "postcss build/css/base.css -d dist/css/ --use autoprefixer && npm run clean",
    "watch": "nodemon -e scss --exec 'npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "git@git.isolary.com:design/isobase.git"
  },
  "author": "Isolary",
  "license": "ISC",
  "devDependencies": {
    "@brainly/html-sketchapp": "^4.0.1",
    "html-sketchapp-cli": "^0.6.2",
    "autoprefixer": "^7.2.3",
    "del-cli": "^1.1.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.3",
    "postcss-cli": "^4.1.1"
  },
  "dependencies": {}
}
